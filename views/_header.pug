header(class='header')
  nav(class='nav nav--tours')
    a(href='/' class='nav__el') All Tours
    form(class='nav__search')
      button(class='nav__search-btn')
        svg
          use(xlink:href='/img/icons.svg#icon-search')
      input(type='text' placeholder='Search Tours' class='nav__search-input')

  div(class='header__logo')
    img(src='/img/logo-white.png' alt='Natours logo')

  nav(class='nav nav--user')
    if user
      button(class='nav__el nav__el--logout') Log out

      a(class='nav__el' href='/me')
        img(class='nav__user-img' src=`/img/users/${user.photo}` alt=`${user.name}`)
        span #{user.name.split(` `)[0]}
    else
      a(class='nav__el ' href='/login') Log In
      a(class='nav__el nav__el--cta' href='/') Sign up